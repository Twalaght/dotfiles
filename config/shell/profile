# Set cross desktop group config variables
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"

# AWS and Azure config for Docker
export AWS_SHARED_CREDENTIALS_FILE="$XDG_CONFIG_HOME/aws/credentials"
export AWS_CONFIG_FILE="$XDG_CONFIG_HOME/aws/config"
export AZURE_CONFIG_DIR="$XDG_DATA_HOME/azure"

# Set Ansible home directory
export ANSIBLE_HOME="$XDG_DATA_HOME/ansible"

# Set Docker home directory
export DOCKER_CONFIG="$XDG_CONFIG_HOME/docker"

# Set MySQL history location
export MYSQL_HISTFILE="$XDG_DATA_HOME/mysql_history"

# Set less history location
export LESSHISTFILE="$XDG_STATE_HOME/less/history"

# Set Python default config file
export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pythonrc"
